<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<vehicle type="pallet" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../shared/xml/schema/vehicle.xsd">
    <annotation>Copyright (C) GIANTS Software GmbH, All Rights Reserved.</annotation>

  <storeData>
    <name> $l10n_storeItem_EmptyPallets </name>
    <image>Pallets/Pallets/Store_Pallets.dds</image>
    <category>pallets</category>
    <brand>LIZARD</brand>
    <showInStore>true</showInStore>
    <canBeSold>false</canBeSold>
    <financeCategory>OTHER</financeCategory>
    <price>70</price>
        <vertexBufferMemoryUsage>57600</vertexBufferMemoryUsage>
        <indexBufferMemoryUsage>7680</indexBufferMemoryUsage>
        <textureMemoryUsage>1703936</textureMemoryUsage>
        <audioMemoryUsage>0</audioMemoryUsage>
        <instanceVertexBufferMemoryUsage>0</instanceVertexBufferMemoryUsage>
        <instanceIndexBufferMemoryUsage>0</instanceIndexBufferMemoryUsage>
  </storeData>

    <base>
        <typeDesc>$l10n_typeDesc_pallet</typeDesc>
        <filename>Pallets/Pallets/Pallets.i3d</filename>
        <size width="1.4" length="1" height="0.8" />
        <canBeReset>false</canBeReset>
        <components>
            <component centerOfMass="0 0.1 0" solverIterationCount="10" mass="50"/>
        </components>
        <showInVehicleMenu>false</showInVehicleMenu>
        <mapHotspot available="false" />
        <input allowed="false"/>
    </base>

    <fillUnit>
        <fillUnitConfigurations>
            <fillUnitConfiguration>
                <fillUnits removeVehicleIfEmpty="true">
                    <fillUnit unitTextOverride="$l10n_unit_literShort" fillTypes="EMPTYPALLET" capacity="10" startFillLevel="10" startFillType="emptyPallet">
                        <fillLevelAnimation name="animation" resetOnEmpty="true" />
                    </fillUnit>
                </fillUnits>
            </fillUnitConfiguration>
        </fillUnitConfigurations>
    </fillUnit>

    <dischargeable requiresTipOcclusionArea="false">
        <dischargeNode node="dischargeNode" emptySpeed="150" fillUnitIndex="1" maxDistance="6" canStartDischargeAutomatically="true" playSound="false"/>
    </dischargeable>

    <pallet fillUnitIndex="1" node="pallet_vis">
        <content>
            <object node="Pallet01"/>
            <object node="Pallet02"/>
            <object node="Pallet03"/>
            <object node="Pallet04"/>
            <object node="Pallet05"/>
            <object node="Pallet06"/>
            <object node="Pallet07"/>
            <object node="Pallet08"/>
            <object node="Pallet09"/>
            <object node="Pallet10"/>			
        </content>

        <sounds>
            <unload template="palletsFillPaper" pitchScale="0.9" />
        </sounds>
    </pallet>

    <dynamicMount triggerNode="dynamicMountTrigger" triggerForceAcceleration="4" additionalMountDistance="0.7" jointTransY="0.11" jointLimitToRotY="true"/>

    <i3dMappings>
        <i3dMapping id="furnitureStackPallet_component1" node="0>" />
        <i3dMapping id="pallet_vis" node="0>0" />
        <i3dMapping id="dynamicMountTrigger" node="0>0|0" />
        <i3dMapping id="dischargeNode" node="0>0|1" />
        <i3dMapping id="Pallet01" node="0>0|2|0" />
        <i3dMapping id="Pallet02" node="0>0|2|1" />
        <i3dMapping id="Pallet03" node="0>0|2|2" />
        <i3dMapping id="Pallet04" node="0>0|2|3" />
        <i3dMapping id="Pallet05" node="0>0|2|4" />
        <i3dMapping id="Pallet06" node="0>0|2|5" />
        <i3dMapping id="Pallet07" node="0>0|2|6" />
        <i3dMapping id="Pallet08" node="0>0|2|7" />
        <i3dMapping id="Pallet09" node="0>0|2|8" />
        <i3dMapping id="Pallet10" node="0>0|2|9" />		
    </i3dMappings>
</vehicle>
